@media screen and (max-width 799px)
  $nav-width = 380px

  body
    width 100%

    header
      position fixed
      top 0
      left 0
      width 100%
      margin-top 0
      height 40px

    main
      margin-top 60px

      nav
        position fixed
        top 0
        right 0
        width 0
        max-width 0
        overflow hidden
        padding 0
        max-height 100%

        &.visible
          max-width 100%
          width $nav-width
          overflow scroll
          padding 15px

      article
        width 100%

    footer
      width 100%