article
  background-color #fff
  padding 10px

  .article-header
    .article-date
      display inline-block
      color #999
      font-size .95rem

  .article-title
    margin-top .8rem
    font-size 2rem





table.bordered
  > thead
    > tr
      > th
        background-color #e0e0e0
        border 1px solid #999

  > tbody
    > tr
      > td, > th
        border 1px solid #999
