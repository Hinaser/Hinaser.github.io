@media screen and (min-width: 1200px)
  $header-height = 300px
  $body-width = 1200px
  $nav-width = 380px

  body
    width $body-width

    header
      height $header-height
      background-image url(../image/logo.jpg)
      background-attachment fixed
      position relative

      h1
        font-size 6em
        color #fff
        font-weight bold
        padding-left 40px

      .profile
        position absolute
        bottom 0
        right 0
        padding 20px
        color #fff
        font-size 2em


    main
      &::after
        display table
        content ''
        clear both

      nav
        width $nav-width
        float right

      article
        width $body-width - $nav-width - 20px

    footer
      clear both
